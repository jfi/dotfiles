# Debian/server-only zsh config

export EDITOR=nvim
export VISUAL=nvim
alias ll='ls -lah'

# Obvious remote prompt (server)
PROMPT='%n@%m:%~ %# '

# Auto-attach to tmux when SSHing in (interactive shells only)
# Check if tmux is running locally on this server (not inherited $TMUX from SSH client)
if [[ -n "$SSH_CONNECTION" ]] && [[ ! -e "${TMUX%%,*}" ]]; then
  case $- in
    *i*) tmux new -As main ;;
  esac
fi
